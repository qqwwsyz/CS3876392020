<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3959D"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="75dp"

        android:layout_marginStart="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/go"
        tools:visibility="visible" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="267dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:contentPadding="5dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="207dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:onClick="gotoMenu"
            app:srcCompat="@drawable/trainer" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/averia_serif_libre_bold_italic"
            android:text="@string/StartExercise"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#4C1A1A"
            android:textSize="36sp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:contentPadding="10dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="146dp"
            android:layout_height="158dp"
            android:layout_marginRight="10dp"
            android:onClick="gotoBmi"
            app:srcCompat="@drawable/fitgrl" />

        <TextView
            android:id="@+id/button3"
            android:layout_width="205dp"
            android:layout_height="107dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="50dp"
            android:background="#2DFFFFFF"
            android:fontFamily="@font/averia_serif_libre_bold_italic"
            android:onClick="gotoBmi"
            android:text="Get Your BMI"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#9C27B0"
            android:textSize="30sp"
            app:backgroundTint="#00917C94" />
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/button4"
        android:layout_width="278dp"
        android:layout_height="45dp"
        android:onClick="gotoHelp"
        app:srcCompat="@drawable/wenhao" />


</LinearLayout>